#! /usr/bin/env python
# encoding: utf-8

def configure(conf):
	conf.recurse('glfw')
	conf.recurse('openal')
	conf.recurse('lua')
	conf.recurse('LuaBridge')
	conf.recurse('ogg')
	conf.recurse('vorbis')

def build(bld):
	bld.recurse('glfw')
	bld.recurse('openal')
	bld.recurse('lua')
	bld.recurse('LuaBridge')
	bld.recurse('ogg')
	bld.recurse('vorbis')

